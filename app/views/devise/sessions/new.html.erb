<% provide(:title, "Login")%>
<h2 class="font-bold text-3xl mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-6">
    <%= f.label :email, class: label_class %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class %>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: label_class%><br />
    <%= f.password_field :password, autocomplete: "current-password", class: input_class %>
  </div>

  <div class="mb-6">
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: checkbox_class %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>

  <div class="mb-6">
    <%= f.submit "Log in", class: button_class(theme: "primary", variant: "expanded") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
