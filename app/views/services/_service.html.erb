<div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
  <div>
    <%= image_tag(service.image, class: "w-full h-96 object-cover rounded-lg shadow-md") if service.image.persisted? %>
    <div class="relative px-4 -mt-16">
      
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <div class="flex items-baseline mb-2 gap-2">
          <span class="bg-yellow-200 text-yellow-800 text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide">
            <%= service.available_slots.count %> Time Schedule
          </span>

          <span class="bg-sky-200 text-sky-800 text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide">
            <%= service.category.name.capitalize %>
          </span>
        </div>
        <div class="ml-2 text-gray-600 uppercase text-xs font-semibold tracking-wider">
            Available Time  &bull; <%= service.available_date.strftime("%B %d %Y")%> <%#= service.available_time.strftime("%H:%M %p")%>
          </div>
        <%= link_to service_path(service) do%>
          <h4 class="mt-1 text-xl font-semibold uppercase leading-tight truncate text-gray-700 hover:text-gray-800"><%= service.name %></h4>
        <% end %>
        <% unless current_page?(root_path)%>
          <div class="mt-1"><span class="text-gray-600 text-md"><%= service.description.to_plain_text.truncate(50) %></span></div>
          <div class="mt-1"><span class="text-gray-500 text-sm" >Price:</span> â‚±<%= service.price %></div>
        <% end %>
         <div class="mt-4">
          <%= link_to "View Service", service_path(service), class: button_class(theme: "primary")%>
        </div>
      </div>
    </div>
  </div>
</div>