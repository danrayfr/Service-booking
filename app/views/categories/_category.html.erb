<div id="<%= dom_id(category)%>">
<%= link_to category_path(category), class: "p-6 border shadow-xl rounded-xl block hover:shadow-lg transition ease-in duration-300
  relative overflow-hidden" do %>
  <%= image_tag(category.image, class: "h-48 w-48 object-cover rounded-lg shadow-md mb-6") if category.image.persisted? %>
    <div class="w-full absolute top-0 left-0 right-0"></div>
  <h3 class="font-medium text-2l"><%= category.name.capitalize %></h3>
  <p class="text-gray-500"><%= category.description.to_plain_text.truncate(20) %></p>
<% end %>
</div>
