<% provide(:title, "Dashboard-Payments")%>
<div class="flex items-center justify-between pb-6 border-b mb-6">
  <h1 class="text-5xl font-bold text-gray-700">Payment method's Dashboard</h1>
</div>

<table class="table-auto border-collapse border-slate-400 w-full">
  <thead class="bg-slate-50 dark:bg-slate-700">
    <tr>
      <th class="border border-slate-300 dark:border-slate-600 text-gray-100 font-semibold p-4">id</th>
      <th class="border border-slate-300 dark:border-slate-600 text-gray-100 font-semibold p-4">Payment method</th>    
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <%= content_tag :tr, id: dom_id(payment), class: dom_class(payment) do %>
        <td class="border border-slate-300 dark:border-slate-700 p-4 text-gray-800"><%= payment.id %></td>
        <td class="border border-slate-300 dark:border-slate-700 p-4 text-sky-800 underline font-bold"><%= payment.name %></td>
      <% end %>
    <% end %>
  </tbody>
</table>