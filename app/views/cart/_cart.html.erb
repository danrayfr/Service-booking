<%= turbo_frame_tag "cart" do %>
<div class="flex items-center justify-between pb-6 border-b mb-6">
  <h1 class="text-5xl font-bold text-gray-700">Cart</h1>
  <% if @cart.cart_items.any? %>
    <h2 class="text-2xl font-bold text-sky-600">Total: <%= @cart.total %> </h2>
  <% end %>
</div>
  <% if @cart.cart_items.count > 0 %>
    <%= render "cart/bookings" %>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
<% end %>

